FROM golang:1.20.4 as build-stage

WORKDIR /app

COPY . .

RUN CGO_ENABLED=0 GOARCH=arm64 GOOS=linux go build -o /proxy ./cmd/iqama_proxy/main.go

FROM gcr.io/distroless/base-debian11:latest-arm64 AS build-release-stage

WORKDIR /

COPY --from=build-stage /proxy /proxy

EXPOSE 3333

USER nonroot:nonroot

CMD ["/proxy"]